<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xurx.springai.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.xurx.springai.entity.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="avatar" property="avatar" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT id, user_id, username, password, email, avatar, create_time, update_time
        FROM user
        WHERE user_id = #{userId}
    </select>

    <select id="selectByUsername" resultMap="BaseResultMap">
        SELECT id, user_id, username, password, email, avatar, create_time, update_time
        FROM user
        WHERE username = #{username}
    </select>

    <insert id="insert" parameterType="com.xurx.springai.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (user_id, username, password, email, avatar)
        VALUES (#{userId}, #{username}, #{password}, #{email}, #{avatar})
    </insert>

    <update id="update" parameterType="com.xurx.springai.entity.User">
        UPDATE user
        SET username = #{username},
            password = #{password},
            email = #{email},
            avatar = #{avatar}
        WHERE user_id = #{userId}
    </update>

    <delete id="deleteByUserId">
        DELETE FROM user WHERE user_id = #{userId}
    </delete>

</mapper>
